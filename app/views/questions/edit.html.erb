<% provide(:title, 'Edit') %>
<h4>Edit your question and add answers: </h4> 
<%= form_for [@game, @question] do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <b>Question: </b>
        <div class="row">
          <div class="col-md-12"  id="mock_gameboard">
            <div id="mock_card-0" class="mock_card"> 
              <%= f.text_area :content, placeholder: "Question content..." %>
            </div> 
          </div>
        </div>
        
        <!--answer row 1-->
        <div class="row">
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer1, placeholder: "First answer..." %>     
            </div>
          </div>
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer2, placeholder: "Second answer..." %>     
            </div>
          </div>
        </div> 
        
        <!--answer row 2-->
        <div class="row">
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer3, placeholder: "Third answer..." %>     
            </div>
          </div>
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer4, placeholder: "Fourth answer..." %>     
            </div>
          </div>
        </div> 
        
        <!--answer row 3-->
        <div class="row">
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer5, placeholder: "Fifth answer..." %>     
            </div>
          </div>
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer6, placeholder: "Sixth answer..." %>     
            </div>
          </div>
        </div> 
        
        <!--answer row 4-->
        <div class="row">
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer7, placeholder: "Seventh answer..." %>     
            </div>
          </div>
          <div class="col-md-6" class = "mock_gameboard">
            <div class="mock_answer">
               <%= f.text_area :answer8, placeholder: "Eighth answer..." %>     
            </div>
          </div>
        </div> 

    </div>
<%= f.submit "Save", class: "btn btn-primary" %>

<% end %>
<hr>
<%= link_to raw(" <i class='fa fa-plus'></i> Add Another Question "),  new_game_question_path(@question.game_id) %> |
<%= link_to raw(" <i class='fa fa-trash-o'></i> Delete"),  game_question_path( @question.game_id, @question.id), method: :delete, data: { confirm: "You sure you want to delete this question?" } %>
